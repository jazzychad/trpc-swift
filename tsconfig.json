{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "rootDir": "src",
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "sourceMap": true,
        "incremental": true,
        "declaration": true,
	"noEmit": true,
	"allowImportingTsExtensions": true
    },
    "include": ["src/**/*.ts"]
}
